  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python Debugger: Current File with Arguments",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "args": "${command:pickArgs}"
    },
    {
      "name": "Debug gslides_automator generate (module mode)",
      "type": "debugpy",
      "request": "launch",
      "module": "gslides_automator",
      "console": "integratedTerminal",
      "args": [
        "generate",
        "--shared-drive-url",
        "0AMMIZgpHjG6aUk9PVA"
      ]
    },
  ]
}